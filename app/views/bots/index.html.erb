
<%# A styliser %>
<%= link_to "Add a new both", new_bot_path, class: "btn btn-flat" %>

<%# Container %>
<div class="container">
  <div class="cards">
  <% @bots.each do |bot| %>
    <div class="card">
          <!-- Slider main container -->
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div class="swiper-slide">
            <div>
            <%= cl_image_tag bot.photo.key, class:"card__img", crop: :fill %>
            </div>
          </div>
          <div class="swiper-slide"><img src="https://c.tenor.com/4gNe9c2RVZIAAAAd/tenor.gif" alt=""></div>
          <div class="swiper-slide"><img src="https://3.bp.blogspot.com/-70IYUA_5Tr0/Vrt-bRTVzkI/AAAAAAAAl1M/BilhZpEm1XQ/s640/final-physicalmap.gif" alt=""></div>
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
        <div>
        <%= link_to bot_path(bot), class:"card__link" do %>
        <%= bot.name %>
        <% end %>
        </div>
    </div>
  <% end %>
  </div>
</div>


<script>
const swiper = new Swiper('.swiper', {
  // Optional parameters
  // direction: 'vertical',
  loop: true,

  // pagination
  pagination: {
    el: '.swiper-pagination',
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
